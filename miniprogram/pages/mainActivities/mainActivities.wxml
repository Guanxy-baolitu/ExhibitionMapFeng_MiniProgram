<!--knowledgeHall.wxml-->
<view class="container">
  <view class="weui-search-bar">
    <view class="weui-search-bar__form">
      <view class="weui-search-bar__box">
        <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
        <input type="text" class="weui-search-bar__input" placeholder="去看什么好呢?" />
      </view>
    </view>
  </view>
  <view class="list-container">
    <scroll-view scroll-y bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
      <view class="list-item" wx:for="{{activityList}}">
        <view class="list-item-detail">
          <text class='list-item-detail-title'>{{item.name}}</text>
          <text class='list-item-detail-title'>{{item.startTime}}</text>
          <text class='list-item-detail-title'>{{item.endTime}}</text>
          <text class='list-item-detail-title'>{{item.location}}</text>
        </view>
      </view>
    </scroll-view>
  </view>
</view>