.list-container
{
  top: 60vh;
}
scroll-view
{
  height: 35vh;
}

.list-item
{
  background: white;
  border-radius: 0.8vh;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 16vh;
  margin-top: 12rpx;
}

.list-item-image
{
  height: 280rpx;
  width: 250rpx;
  margin-left: 40rpx;
}

.list-item-detail
{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 35rpx;
}

.list-item-detail-title
{
  color:"#009688";
  font-style: bold;
}

.list-item-detail-button
{
  margin-top: 100rpx;
}